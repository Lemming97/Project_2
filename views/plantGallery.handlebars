<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Bloom Time Start: {{format_time gallery.starting_date}}</h4>
  <h4>Bloom Time End: {{format_time gallery.ending_date}}</h4>
  <h2><i>*Disclaimer: Please Use your own Average Last Spring Frost Date to determine approximate planting and harvesting
      times. The above is a suggestion.</i></h2>
  <section class="flex-row justify-center">
    {{#each gallery.plants as |plant|}}
    {{> plant-details}}
    {{/each}}
  </section>
</section>